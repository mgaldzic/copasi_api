	${COPASIAPI_SOURCE_DIR}/copasi/trajectory/*.cpp
	${COPASIAPI_SOURCE_DIR}/copasi/tss/*.cpp
	${COPASIAPI_SOURCE_DIR}/copasi/tssanalysis/*.cpp
